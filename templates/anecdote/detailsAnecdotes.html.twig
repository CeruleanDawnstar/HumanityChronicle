{% extends "base.html.twig" %}

{% block title %}Details de l'anecdote{% endblock %}

{% block body %}
    <h3>Details de l'anecdote</h3>

    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{ asset('img/anecdotes/'~  anecdotes.imgUrl ~'') }}" class="card-img" alt="{{ anecdotes.imgUrl }}">

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ anecdotes.titre }}</h5>
                    <p class="card-text">{{ anecdotes.anecdote }}</p>
                </div>
            </div>
        </div>
    </div>


    {% set evenement = anecdotes.relation %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h3>{{ evenement.titre }}</h3>
            <p>{{ evenement.detail }}</p>
            <a href="/anecdotes/list"><button type="button" class="btn btn-outline-warning">Retour Ã  la liste</button></a>
        </div>
    </div>

{% endblock %}