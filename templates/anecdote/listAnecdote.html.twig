            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('img/anecdotes/'~ elem.imgUrl ~'') }}" class="card-img" alt="{{ elem.imgUrl }}">

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ elem.titre }}</h5>
                        <p class="card-text">{{ elem.anecdote }}</p>
                        <a href="{{ path('detailsAnecdote',{'anecdote':elem.id}) }}"><button type="button" class="btn btn-outline-warning">DÃ©tails</button></a>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}