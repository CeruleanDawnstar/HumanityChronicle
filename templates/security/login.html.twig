{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="jumbotron jumbotron-fluid">
    <h3 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h3>
    <label id="labelemail" for="inputEmail">Email</label>
    <input id="inputEmail" type="email" value="{{ last_username }}" name="email" class="form-control" required autofocus>
    <label id="labelpassword" for="inputPassword">Mot de Passe</label>
    <input id="inputPassword" type="password" name="password"  class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-outline-warning" id="submit" type="submit">
        Valider
    </button>
    </div>
</form>
{% endblock %}
