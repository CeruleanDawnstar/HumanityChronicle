{% extends "base.html.twig" %}

{% block title %}Détail d'évènement{% endblock %}

{% block body %}
    <h3>Details Évènement</h3>

    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{ asset('img/events/'~ event.imgUrl ~'') }}" class="card-img" alt="{{ event.imgUrl }}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> {{ event.titre }}</h5>
                    <p class="card-text">{{ event.extrait }}</p>

{#                    <a href="/event/list"><button type="button" class="btn btn-outline-warning">Retour à la liste</button></a>#}
                </div>
            </div>
        </div>
    </div>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h3>{{ event.titre }}</h3>
            <p>{{ event.detail }}</p>
            <a href="/event/list"><button type="button" class="btn btn-outline-warning">Retour à la liste</button></a>
        </div>
    </div>

    {% for anecdotes in event.anecdotes %}

    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{ asset('img/anecdotes/'~ anecdotes.imgUrl) }}" class="card-img" alt="{{ anecdotes.imgUrl }}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> {{ anecdotes.titre }}</h5>
                    <p class="card-text">{{ anecdotes.anecdote }}</p>

                    {#                    <a href="/event/list"><button type="button" class="btn btn-outline-warning">Retour à la liste</button></a>#}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}