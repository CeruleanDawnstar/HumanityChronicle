{% extends 'base.html.twig' %}

{% block title %}Fiche Personality{% endblock %}

{% block body %}
    <h3>Fiche Personality</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personality.id }}</td>
            </tr>
            <tr>
                <th>ImgUrl</th>
                <td><img src="{{ asset('img/personnalites/'~ personality.imgUrl) }}" alt="{{ personality.nom }}" width="150"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personality.nom }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ personality.dateNaissance }}</td>
            </tr>
            <tr>
                <th>Date de décès</th>
                <td>{{ personality.dateDeces }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ personality.biographie }}</td>
            </tr>

        </tbody>
    </table>

<button type="button" class="btn btn-outline-warning"><a href="{{ path('personality_index') }}">Retour à la liste</a></button>

    <button type="button" class="btn btn-outline-warning"><a href="{{ path('personality_edit', {'id': personality.id}) }}">Modifier</a></button>

    {{ include('personality/_delete_form.html.twig') }}
{% endblock %}
